		{$frameRate = 0.0208333333;
		}
	if (`currentUnit -query -time` == "palf")
		{$frameRate = 0.0200000000;
		}
	if (`currentUnit -query -time` == "ntscf")
		{$frameRate = 0.0166666667;
		}

	string $curWord;
	float $curData;

/*****************************************************************************************************/
/************************                Writing Header                    ***************************/
/*****************************************************************************************************/


