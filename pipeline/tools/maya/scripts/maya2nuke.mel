		{$frameRate = 0.0416666667;
		}
	if (`currentUnit -query -time` == "pal")
		{$frameRate = 0.0400000000;
		}
	if (`currentUnit -query -time` == "ntsc")
		{$frameRate = 0.0333333333;
		}
